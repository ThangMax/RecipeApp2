@{
    ViewData["Title"] = "Create Category";
}

<h1>Create Category</h1>
<form asp-action="Create" asp-asp-controller="Category" method="post">
    <div class="form-group mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter category name">
    </div>
    <div class="form-group mb-3">
        <label for="name" class="form-label">Description</label>
        <textarea class="form-control" id="decription" name="description" rows="3"
            placeholder="Enter category description"></textarea>
    </div>
    <div class="form-group mb-3 d-flex justify-content-end gap-3">
        <a asp-area="" asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to List</a>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
